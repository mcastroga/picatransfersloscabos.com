.navbar-collapse
  height 100%

.navbar, .navbar-brand
  padding 0

.navbar-light
  background-color #556f7b
  .navbar-nav
    .nav-link
      align-items center
      color #fff
      display flex
      font-size 24px
      font-weight 500
      height 100%
      padding 0
      text-transform uppercase

    .nav-item
      padding-left 0
      padding-right 40px

    .nav-item:last-child
      padding-right 0

      .nav-link
        font-size 12px!important

@media (max-width 1280px)
  .navbar-light
    .navbar-nav
      .nav-link
        font-size 22px
      .nav-item
        padding-right 30px

@media (max-width 991px)
  .navbar-light
    .navbar-nav
      .nav-item
        padding 0
        text-align center
  .navbar-collapse
    background-color #fff
