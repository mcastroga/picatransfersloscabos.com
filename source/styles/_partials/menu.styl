.navbar-collapse
  height 100%

.navbar-brand
  img
    padding 12px 0

.navbar, .navbar-brand
  padding 0

.navbar
  background-color #556f7b

  .navbar-toggler
    background-image url('/images/vectors/burger-icon.svg')
    background-repeat no-repeat
    background-size contain
    border-color transparent

  .navbar-nav
    background-color #556f7b
    .nav-link
      align-items center
      color #fff
      display flex
      font-size 24px
      font-weight 500
      height 100%
      padding 0
      text-transform uppercase

    .nav-item
      padding-left 0
      padding-right 40px

    .nav-item:last-child
      padding-right 0

      .nav-link
        font-size 12px!important

@media (max-width 1280px)
  .navbar
    .navbar-nav
      .nav-link
        font-size 22px
      .nav-item
        padding-right 30px

@media (max-width 991px)
  .navbar
    .navbar-nav
      .nav-item
        padding 0
        text-align center
  .navbar-collapse
    background-color #fff
