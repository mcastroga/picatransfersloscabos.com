section#zones
    color #000
    padding 30px 0

    .card
        border 0
        border-radius 0

        .card-header
            background-color $color1
            border-radius 0
            text-align center

            .card-title
                align-items center
                color $colorText
                display flex
                font-size 22px
                justify-content center
                min-height 66px

            .card-text
                color $colorText
                font-size 16px
        .card-body
            padding 10px

            .zone-service,
            .zone-price
                font-size 16px
                margin 0
                text-align center

            .zone-price
                font-weight bold
        .card-footer
            background-color $color2
            border-radius 0
            color $colorText

            button
                border-radius 0
                color $colorText

    .modal-body
        .ico-hotel
            border 1px solid $colorBackground
            border-radius 0
            display inline-block
            height 102px
            margin 5px
            overflow hidden
            padding 0
            width 122px

            img
                height 60px
                width 120px
            p
                align-items center
                background-color $color1
                color $colorText
                display flex
                font-size 12px
                height 40px
                justify-content center
                margin 0

    @media (max-width: 991px)
        .fix-mobile-margin-bottom
            margin-bottom 30px