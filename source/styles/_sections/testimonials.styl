section#testimonials
  background-color #556f7b
  color #fff
  padding 30px 0

  .testimonial-text
    background-color #fff
    background-image url(/images/icons/icon-testimonial-background.png)
    background-position initial
    background-repeat no-repeat
    border-radius 8px
    padding 10px
    position relative

    p
      color #000
      font-size 18px
      font-style italic
      text-align left

    a.fixed-link
      position absolute
      right 8px
      top 5px

  .testimonial-bottom
      display flex
      align-items center
      margin-top 20px
  .user-image
      border-radius 50%
      display flex
      height 64px
      overflow hidden
      width 64px

      img
         margin 0

  .user-data
    margin-left 15px
    text-align left

    .name
      font-size 20px
      font-weight bold

  img
    margin-bottom 20px

  h3
    color #00bce4
    font-size 40px
    margin-bottom 15px
  a, p
    color #fff
    font-size 24px
    text-decoration none
