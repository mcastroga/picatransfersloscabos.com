#step-3.row
  form.col-sm-12
    .info.info-container
      .col-12
        h4 PASO 3 - Algunos extras
      .row
        .col-12.col-sm-12.col-md-12.col-lg-6
          label Baby Seat
          select#form-extras-babyseat
            option(name="babyseat" value="0 babyseat") 0 babyseat
            option(name="babyseat" value="1 babyseats") 1 babyseats
            option(name="babyseat" value="2 babyseats") 2 babyseats
            option(name="babyseat" value="3 babyseats") 3 babyseats
        .col-12.col-sm-12.col-md-12.col-lg-6
          label Buster Seat
          select#form-extras-busterseat
            option(name="busterseat" value="0 busterseat") 0 busterseat
            option(name="busterseat" value="1 busterseats") 1 busterseats
            option(name="busterseat" value="2 busterseats") 2 busterseats
            option(name="busterseat" value="3 busterseats") 3 busterseats
        .col-12.col-sm-12.col-md-12.col-lg-6
          label Parada de compras por 30 min (30 USD)
          input#form-grocery(type='checkbox' name='grocery')
      .col-sm-12
        input#send-step-3.submit-button(type='button' name='SEND' value='SEND')
